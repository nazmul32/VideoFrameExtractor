<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/trim_option_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_trim_start_here"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_start_here"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/iv_trim_end_here"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_end_here"
            android:scaleType="centerInside"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/trim_option_container"
        android:id="@+id/trim_recycler_view"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

    <LinearLayout
        android:layout_below="@id/trim_recycler_view"
        android:id="@+id/trim_info_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

    </LinearLayout>

    <View
        android:layout_below="@id/trim_info_container"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bg_horizontal_line" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_alignTop="@id/trim_option_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="-3dp"
            android:background="@drawable/diagonal_line_1"
            android:layout_marginEnd="-3dp" />
        <View
            android:layout_width="2dp"
            android:layout_height="170dp"
            android:layout_marginTop="22dp"
            android:background="@color/color_white"/>
        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="-3dp"
            android:background="@drawable/diagonal_line_2"
            android:layout_marginStart="-3dp" />
    </LinearLayout>
</RelativeLayout>